extends layout

block content
  .w3-content(style="max-width:1600px")
    header.w3-container.w3-center.w3-padding-48.w3-black
      h1.w3-xxxlarge Obras Musicais
  .w3-container
    table.w3-table-all.w3-card-4
      tr.w3-hover-blue
        th ID
        th Título
        th Nº de Partituras
        th Operações
      each obra in obras
        tr.w3-hover-blue
          td= obra.id
          td= obra.tit
          td= obra.count
          td 
            a(href="/" + obra.id) 
              button.w3-button.w3-round-xlarge.w3-blue Ver
  .w3-container.w3-black
    h3(align=center) Powered by: 
      a(href="https://www.w3schools.com") w3.css
